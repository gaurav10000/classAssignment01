<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        position: relative;
      }

      .container {
        background-color: rgba(100, 32, 11, 0.833);
        width: 100%;
        height: 100dvh;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;

        min-height: 20rem;
        max-width: 18rem;
        padding: 1rem;
        text-align: center;


        background: rgba(189, 125, 125, 0.39);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(8.7px);
        -webkit-backdrop-filter: blur(8.7px);
        border: 1px solid rgba(189, 125, 125, 0.56);
      }

      input {
        width: 80%;
        height: 2rem;
        text-align: center;
        outline: none;
        border: none;
        font-size: larger;
      }

      button {
        padding: 0.4rem 1rem;
        font-size: medium;
        background-color: rgb(190, 184, 184);
        border: 1px solid gray;
        border-radius: 0.2rem;
        cursor: pointer;
      }

      .moreButtons {
        display: flex;
        gap: 1rem;
        margin: 0.6rem auto;
      }
      .moreButtons div{
        padding: 0.4rem 1rem;
        font-size: medium;
        background-color: rgb(190, 184, 184);
        border: 1px solid gray;
        border-radius: 0.2rem;
        cursor: pointer;
      }

      span {
        color: rgb(122, 6, 6);
      }

      .hamburgerMenu {
        z-index: 2;
        position: absolute;
        top: 0;
        left: 0;
        height: 3rem;
        width: 3rem;
        background-color: blueviolet;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        border: 2px solid black;
      }
      .hLine {
        height: 1px;
        width: 80%;
        border: 1px solid red;
        
      }

      .Navbar {
        position: absolute;
        z-index: 1;
        left: -800px;
        height: 100dvh;
        width: 40%;
        background-color: aqua;
        padding: 1rem;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
        
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="hamburgerMenu" onclick="showNavbar()"> 
        <div class="hLine line1"></div>
        <div class="hLine line2"></div>
        <div class="hLine line3"></div>
      </div>
      <div class="Navbar">
        <p>Home</p>
        <p>Contact</p>
        <p>About Us</p>
        <p>Untitled</p>
      </div>
      <form action="/editUser" method="post">
        <input
          type="text"
          name="newName"
          id="newName"
          placeholder="Enter new username"
        />
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Enter your email"
        />
        
        <button type="submit">Edit</button>
        <div class="moreButtons">
            <div onclick="createUserPage()">Register User</div>
            <div onclick="usersPage()">View Users</div>
        </div>
        <span><%= message %></span>
      </form>
    </div>
  </body>
  <script>
    function createUserPage () {
        window.location = "/"
    }
    function usersPage () {
        window.location = "/users"
    }

    function showNavbar () {
      const navbar = document.querySelector(".Navbar")
      if (navbar.style.left == "" || navbar.style.left == "-800px") {
        navbar.style.left = "0px"
      } else {
        navbar.style.left = "-800px"
      }
      console.log(navbar.style.left);
    }
  </script>
</html>
